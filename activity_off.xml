<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Popular Restaurants Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POPULAR RESTAURANTS AROUND YOU"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@android:color/black"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/featured_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FEATURED"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="16dp" />

    <!-- Featured Restaurant Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Restaurant Image -->
            <ImageView
                android:id="@+id/restaurant_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/o4"
                android:scaleType="centerCrop" />

            <!-- Restaurant Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Offer -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flat 50% OFF + 3 more"
                    android:textColor="@android:color/holo_purple"
                    android:textStyle="bold"
                    android:paddingBottom="4dp" />

                <!-- Restaurant Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amritsari Haveli"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@android:color/black" />

                <!-- Restaurant Location and Cuisine -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ranjit Avenue, Amritsar\nNorth Indian • Mughlai"
                    android:textColor="@android:color/darker_gray" />

                <!-- Rating, Distance, Price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <!-- Rating -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.5★"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_weight="1" />

                    <!-- Distance -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.8 km"
                        android:layout_weight="1" />

                    <!-- Price for Two -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹1000 for two"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- First Row of Two Images -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingBottom="8dp">

        <!-- First Image -->
        <ImageView
            android:id="@+id/image_one"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/o2"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp" />

        <!-- Second Image -->
        <ImageView
            android:id="@+id/image_two"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/o3"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <!-- Second Row of Two Images -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Third Image -->
        <ImageView
            android:id="@+id/image_three"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/c4"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp" />

        <!-- Fourth Image -->
        <ImageView
            android:id="@+id/image_four"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/c5"
            android:scaleType="centerCrop" />
    </LinearLayout>

</LinearLayout>
