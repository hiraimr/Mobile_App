<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Back button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <!-- Header Image -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
        android:contentDescription="Collections header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Tab Layout -->
    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/headerImage"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tabDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery"
            android:textColor="#FF000000"
            android:textSize="18sp"
            android:padding="8dp"
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/tabDining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dining"
            android:textColor="#FFAAAAAA"
            android:textSize="18sp"
            android:padding="8dp"
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <!-- Collection Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabLayout"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <!-- Bookmarks Card -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFE6E6"
            android:padding="16dp"
            android:gravity="center"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_bookmark"
                android:contentDescription="Bookmark icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bookmarks"
                android:textColor="#FF000000"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 dish â€¢ 0 restaurant"
                android:textColor="#FF555555"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/createCollectionCard"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_add"
                android:contentDescription="Add collection icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create a new Collection"
                android:textColor="#FF000000"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>